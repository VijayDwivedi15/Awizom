        <script src="~/Scripts/jquery.validate.min.js"></script>

        <script type="text/javascript">
            $("#Appointment").validate({
                submitHandler: function (form) {
                }
            });
            $("#AppointmentSubmit").click(function (e) {
                if ($("#Appointment").valid()) {
                    $('.form-process').fadeIn();

                    var fn = $('#ClassName').val();
                    var regex = /^([a-zA-Z\0-9\_])+(\s)+([a-zA-Z\0-9\_])+$/
                    //var regex = /^(?=.*[A-Z]).{8,}/
                    var CheckName = regex.test(fn);
                    if (CheckName == true && $('#ClassName').val() != '' && $('#Note').val() != '') {
                        $.alert({
                            title: 'Sorry',
                            content: 'Class name should not contains <b>spacial character or number.</b>',
                            confirmButton: 'OK',
                            confirmButtonClass: 'btn-info',
                            icon: 'icon-thumbs-down icon-2x ',
                            animation: 'zoom',
                            confirm: function () {
                            }
                        });
                    } else {
                        $.ajax({

                            type: "post",
                            url: "/Home/Appointment",

                            data: {
                                AppointmentID: $('#AppointmentID').val(),
                                Name: $('#name').val(),
                                Email: $('#email').val(),
                                Phone : $('#phone').val(),
                                FTV: $('#FTime').val(),
                                Date: $('#Date').val(),
                                Time: $('#Time').val(),
                                Message: $('#message').val()
                    },
                    datatype: "json",

                    success: function (data) {

                        $('.form-process').fadeOut();
                        if (data == "Succeeded") {
                            $.alert({
                                title: 'Cheers',
                                content: 'Your Data has been saved <b> SUCCESSFULLY.</b>',
                                confirmButton: 'OK',
                                confirmButtonClass: 'btn-info',
                                icon: 'icon-thumbs-up icon-2x ',
                                animation: 'zoom',
                                confirm: function () {
                                    var url = $("#RedirectToHome").val();
                                    location.href = url;
                                }
                            });
                        }
                        else {
                            $.alert({
                                title: 'Sorry',
                                content: 'Something went <b>wrong.</b>',
                                confirmButton: 'OK',
                                confirmButtonClass: 'btn-info',
                                icon: 'icon-thumbs-down icon-2x ',
                                animation: 'zoom',
                                confirm: function () {
                                }
                            });
                        }

                    }
                });
            }


            }
            });


